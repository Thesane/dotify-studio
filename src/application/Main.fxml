<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="root" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.MainController">
   <center>
      <SplitPane fx:id="splitPane" dividerPositions="0.1" BorderPane.alignment="CENTER">
         <items>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <HBox alignment="CENTER_RIGHT">
                     <children>
                        <Button fx:id="folderButton" mnemonicParsing="false" onAction="#showOpenFolder" text="H" />
                        <Button fx:id="expandButton" mnemonicParsing="false" onAction="#toggleSearchArea" text="&gt;" />
                     </children>
                  </HBox>
                  <ProgressBar fx:id="searchProgress" prefWidth="200.0" progress="0.0" />
                  <TextField fx:id="searchFor" onKeyTyped="#searchChanged" />
                  <ListView fx:id="listView" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
            <TabPane fx:id="tabPane" prefHeight="392.0" prefWidth="595.0" tabClosingPolicy="ALL_TABS" />
         </items>
      </SplitPane>
   </center>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="%menu-item-file">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#showOpenDialog" text="%menu-item-open">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="O" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
                     </accelerator>
                  </MenuItem>
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="false" onAction="#closeTab" text="%menu-item-close">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="W" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
                     </accelerator>
                  </MenuItem>
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="false" onAction="#openPreferences" text="%menu-item-preferences" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="false" onAction="#closeApplication" text="%menu-item-quit" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="%menu-item-edit">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#refresh" text="%menu-item-refresh">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="F5" control="UP" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator></MenuItem>
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="%menu-item-help">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#openAbout" text="%menu-item-about" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
